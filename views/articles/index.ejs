<!DOCTYE  html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <!-- include bootstrap below -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">    <title>Markdown Blog</title>
</head>
<body>
    <div class="container-fluid p-2 m-4 border">
        <h1>Blog Articles</h1>
        <button class="btn btn-success" onclick="window.location.href='/articles/new'">New Article</button>

        <% articles.forEach(article => { %>
            <div class="card mt-2 mb-2 p-2">
                <div class="card-title"><%=article.title %></div>
                <div class="card-subtitle text-muted"><%= article.createdAt.toDateString()%> </div>
                <div class="card-text"> <%= article.description%></div>
                <div class="card-body">
                    <a href="/articles/<%= article.slug%>" class="btn btn-primary">Read More</a>
                    <a href="/articles/<%= article.slug%>/edit" class="btn btn-warning">Edit</a>
                    <a href="/articles/<%= article.slug%>/delete" class="btn btn-danger">Delete</a>
                </div>  
            </div>
        <% }) %>
    </div>
</body>
</html>